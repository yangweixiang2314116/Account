<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/menu_frame"
    android:background="@color/account_top_background_color"
android:padding="10dp">

    <RelativeLayout
        android:id="@+id/account_start_login"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/account_login_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_account_mything" />

        <TextView
            android:id="@+id/total_value_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/account_login_icon"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/account_not_log_in"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/account_slidemenu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_start_login"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent" >
    </ListView>

</RelativeLayout>