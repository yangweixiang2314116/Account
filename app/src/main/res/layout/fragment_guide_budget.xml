<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/guide_budget_chose"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.example.account.WheelView
            android:id="@+id/wheel_view_wv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/chose_your_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/account_guide_chose_budget"
        android:textColor="@android:color/tab_indicator_text"
        android:layout_above="@id/guide_budget_chose"
        android:layout_marginBottom="30dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/start_use_acccount"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/start_account_btn_selector_bg"
        android:gravity="center"
        android:text="@string/account_guide_start_use"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="20sp" />

</RelativeLayout>